{{!< default}}
{{> header}}
<main class="main-transit" role="main">
{{#tag}}
<div class="article-transit tag-heading">
<p>Posts Tagged: {{name}}</p>
</div>
{{/tag}}
{{#foreach posts}}
<article class="article-transit" role="article" itemscope itemtype="http://schema.org/Article">
<header class="postheader-transit">
<h1 class="posttitle-transit" itemprop="headline"><a href="{{{url}}}" rel="bookmark">{{title}}</a></h1>
<time class="date-transit" datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">{{date format='dddd DD MMM YYYY'}}</time>
</header>
<div class="postcontent-transit" itemprop="articleBody">
{{content words="100"}}
</div>
{{#if tags}}
<div class="posttags-transit">
Tags: {{tags separator=" | "}}
</div>
{{/if}}
{{/foreach}}
</article>
{{#if pagination}}
<div class="pagination-transit">
{{{pagination}}}
</div>
{{/if}}
</main>
{{> footer}}