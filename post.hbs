{{!< default}}
{{> header}}
<main class="main-transit" role="main">
{{#post}}
<article class="article-transit" role="article" itemscope itemtype="http://schema.org/Article">
<header class="postheader-transit">
<h1 class="posttitle-transit" itemprop="headline">{{title}}</h1>
<div class="date-transit">
Posted on <time datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">{{date format='dddd DD MMM YYYY'}}</time>
</div>
</header>
<div class="postcontent-transit" itemprop="articleBody">
{{#if feature_image}}
<img src="{{feature_image}}" alt="{{title}}">
{{/if}}
{{content}}
</div>
{{#if tags}}
<div class="posttags-transit">
Check out more about: {{tags separator=" | "}}
</div>
{{/if}}
